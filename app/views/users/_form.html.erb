<%= semantic_form_for @user do |f| %>
  <%= f.inputs do %>
    <%= f.input :login %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :nickname %>
    <%= f.input :starting_shares %>
    <%= f.input :shares_remaining %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
