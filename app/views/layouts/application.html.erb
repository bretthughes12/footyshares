<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> | AFL Finals Sharemarket</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
  <div id="page">

    <div id="header">
    	<h1>AFL Finals Sharemarket</h1>
    	
        <% if current_user %>  
			<p class="info">Logged in as <%= current_user.login %></font></p>
        <% end %>
    </div>

    <div id="middle"> 
	  <div id="main"> 
		<p style="color: green"><%= flash[:notice] %></p>

		<%= yield :layout %>
      </div> 

      <div id="sidebar">
		<ul id="nav">
	        <% if current_user %>  
				<li><%= link_to 'Shareholdings', root_url %></li>
				<li><%= link_to 'Invest', invest_shares_url %></li>

		        <% if current_user.admin %>
					<li><%= link_to 'Admin', admin_url %>
						<ul>
							<li><%= link_to 'Users', admin_users_url %></li>
							<li><%= link_to 'Rounds', admin_rounds_url %></li>
							<li><%= link_to 'Matches', admin_matches_url %></li>
							<li><%= link_to 'Teams', admin_teams_url %></li>
							<li><%= link_to 'Shares', admin_shares_url %></li>
						</ul>
					</li>
		        <% end %>

	        	<li><%= link_to "Profile", edit_user_path(current_user) %></li>
	        	<li><%= link_to "Logout", logout_path %></li>
	        <% else %>
	        	<li><%= link_to "Login", login_path %></li>
	        <% end %>
		</ul>
      </div> 
    </div> 

    <div id="footer"> 
    </div> 
  	
  </div>

</body>
</html>
