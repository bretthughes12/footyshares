<tr>
	<td><%= user.name %></td>
	<td><%= user.nickname %></td>
	<td><%= user.starting_shares %></td>
	<td>
		<%= check_box_tag 'user[paid]', "1", user.paid, 
		     { 'data-href' => admin_user_path(:id => user.id),
		       'data-spinner-id' => "#spinner-#{user.id}",	 
			   :class => "updateable-checkbox" } %>
		<%= image_tag 'spinner.gif', :id => "spinner-#{user.id}",
			:style => 'display: none' %>
	</td>
	<td class="list-actions">
	    <%= link_to 'Edit', edit_admin_user_path(user) if can? :update, user %>
	    <%= link_to 'Destroy', admin_user_path(user), 
	    					   method: :delete, 
	    					   data: { confirm: 'Are you sure?' } if can? :destroy, user %>
	</td>
</tr>
