<% title "Listing shares" %>

<h1><%= yield(:title) %></h1>

<table>
  <tr>
    <th>Team</th>
    <th>User</th>
    <th>Shares</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shares.each do |share| %>
  <tr>
    <td><%= share.team_id %></td>
    <td><%= share.user_id %></td>
    <td><%= share.shares %></td>
    <td><%= link_to 'Show', share %></td>
    <td><%= link_to 'Edit', edit_share_path(share) %></td>
    <td><%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

