<% title "Listing teams" %>

<h1><%= yield(:title) %></h1>

<table>
  <tr>
    <th>Match</th>
    <th>Name</th>
    <th>Winner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.match_id %></td>
    <td><%= team.name %></td>
    <td><%= team.winner %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

